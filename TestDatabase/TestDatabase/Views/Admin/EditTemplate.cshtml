@model TestDatabase.Models.Template

@{
    ViewData["Title"] = "EditTemplate";
}

<h1>EditTemplate</h1>

<h4>Template</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTemplate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" name="id"/>
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game" class="control-label">Game name</label>
                <select asp-for="game" asp-items="ViewBag.GameNames" class="form-control"></select>
                <span asp-validation-for="game" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" name="name"/>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="minimumPlayers" class="control-label"></label>
                <input asp-for="minimumPlayers" class="form-control" name="minimumPlayers"/>
                <span asp-validation-for="minimumPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rules" class="control-label"></label>
                <input asp-for="rules" class="form-control" name="rules"/>
                <span asp-validation-for="rules" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="winCondition" class="control-label"></label>
                <input asp-for="winCondition" class="form-control" name="winCondition"/>
                <span asp-validation-for="winCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="submit" value="Go Back" class="btn btn-primary" onclick="location.href='@Url.Action("Template", "Admin")'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
