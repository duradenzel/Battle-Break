@model TestDatabase.Models.Template

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Template</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTemplate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" name="templateName" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="minimumPlayers" class="control-label"></label>
                <input asp-for="minimumPlayers" class="form-control" name="templateMinimumPlayers" />
                <span asp-validation-for="minimumPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rules" class="control-label"></label>
                <input asp-for="rules" class="form-control" name="templateRules" />
                <span asp-validation-for="rules" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="winCondition" class="control-label"></label>
                <input asp-for="winCondition" class="form-control" name="templateWinCondition" />
                <span asp-validation-for="winCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Template">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
