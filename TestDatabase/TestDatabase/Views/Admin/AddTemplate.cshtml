@model BattleBreakBLL.Models.TemplateModel

@{
    ViewData["Title"] = "AddTemplate";
}

<h1>AddTemplate</h1>

<style>
    .createtemplate {
        background-color: rgba(255, 255, 255, 0.90);
        border-radius: 15px;
        padding: 20px;
        margin: 10px;
    }
</style>

<div class="createtemplate">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateTemplate" method="post">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="game" class="control-label">Game name</label>
                    <select asp-for="game" asp-items="ViewBag.GameNames" class="form-control"></select>
                    <span asp-validation-for="game" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label">Template name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="minimumPlayers" class="control-label">Minimum players</label>
                    <input asp-for="minimumPlayers" class="form-control" />
                    <span asp-validation-for="minimumPlayers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="rules" class="control-label">Rules</label>
                    <input asp-for="rules" class="form-control" />
                    <span asp-validation-for="rules" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="winCondition" class="control-label">Win condition</label>
                    <input asp-for="winCondition" class="form-control" />
                    <span asp-validation-for="winCondition" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>

    <div>
       <input type="submit" value="Go Back" class="btn btn-primary" onclick="location.href='@Url.Action("Template", "Admin")'" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
